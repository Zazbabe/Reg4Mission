<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reg4MissionX</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Reg4MissionX.styles.css" asp-append-version="true" />
</head>

<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                    Reg4MissionX
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Meny">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <!-- Vänster meny -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item" id="navHome">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item" id="navPrivacy">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Utloggat-läge -->
                        <li class="nav-item" id="navRegister">
                            <a class="nav-link" asp-controller="Account" asp-action="Register" id="registerLink">Registrera</a>
                        </li>

                        <!-- Inloggat-läge (döljs av default, JS visar när "loggedIn" finns) -->
                        <li class="nav-item d-none" id="navDashboard">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Välkommen</a>
                        </li>

                        <li class="nav-item d-none" id="navSearch">
                            <a class="nav-link" asp-controller="Search" asp-action="Index">Sök</a>
                        </li>

                        <li class="nav-item d-none" id="navProfile">
                            <a class="nav-link" asp-controller="Profile" asp-action="Index">Profil</a>
                        </li>
                    </ul>

                    <!-- Höger meny -->
                    <ul class="navbar-nav ms-auto">
                        <!-- Utloggat: Login ska hoppa till login-boxen på startsidan -->
                        <li class="nav-item" id="navLogin">
                            <!-- viktigt: använd asp-länk till Home/Index + #login -->
                            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="login" id="loginNavLink">
                                Login
                            </a>
                        </li>

                        <!-- Inloggat: Logga ut (UI-only via JS) -->
                        <li class="nav-item d-none" id="navLogout">
                            <a class="nav-link" href="#" id="logoutLink">Logga ut</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page content -->
    <div class="container py-4">
        @if (TempData["Success"] is string success)
        {
            <div class="alert alert-success">@success</div>
        }
        @if (TempData["Error"] is string error)
        {
            <div class="alert alert-danger">@error</div>
        }

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-white">
        <div class="container py-3 text-muted small">
            &copy; 2026 - Reg4MissionX - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
